<main class="lista-vacantes">
    <h2>Navegaci√≥n</h2>
    <div class="botones separador">
        <a href="/editar-perfil" class="btn btn-azul">Editar Perfil</a>
        <a href="/vacantes/nueva" class="btn btn-verde">Nueva Vacante</a>
    </div>

    <h2>Tus Vacantes</h2>

    <div class="vacantes panel-administracion">
        {{#if vacantes.length}}
            {{#each vacantes}}
                <div class="vacante">
                    <div class="caja">
                        <h3>{{empresa}}</h3>
                        <p class="puesto">{{titulo}}</p>
                        <p class="candidatos">
                            Postulados: {{candidatos.length}}
                        </p>
                    </div>
                    <div class="botones ">
                        <a href="/candidatos/{{_id}}" class="btn btn-amarillo">Candidatos</a>                    
                        <a href="/vacantes/editar/{{url}}" class="btn btn-verde">Editar</a>                    
                        <a href="#" data-eliminar="{{_id}}" class="btn btn-rojo">Eliminar</a>                
                    </div>
                </div>
            {{/each}}
        {{else}}
            <p>No hay Vacantes, Crea una</p>
        {{/if}}
    </div>
</main>